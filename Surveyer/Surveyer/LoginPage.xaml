<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Surveyer.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please Login to Continue"/>
            <Label Text="UserName" TextColor="Black"/>
            <Entry x:Name="txtUserName1"/>
            <Label Text="Password" TextColor="Black"/>
            <Entry x:Name="txtPassword1"/>
            <Button x:Name="btnLogin" Text="Log In"/>
            <Label Text="Don't Have Account?"/>
            <Button x:Name="btnSignup" Text="Sign Up"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>